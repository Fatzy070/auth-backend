<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
       .first-div {
  display: grid;
  grid-template-columns: repeat(1, 1fr); /* Mobile default: 1 column */
  gap: 1rem;
}

/* Tablet (from 640px and up) */
@media (min-width: 640px) {
  .first-div {
    grid-template-columns: repeat(2, 1fr); /* 2 columns on small tablets */
  }
}

/* Desktop (from 1024px and up) */
@media (min-width: 1024px) {
  .first-div {
    grid-template-columns: repeat(4, 1fr); /* 4 columns on large screens */
  }
}

.first-div img {
  max-width: 100%;
  width: 100%;      /* Fill the grid column */
  height: 200px;
  object-fit: cover; /* Avoid image stretch */
}

    </style>
</head>
<body>
    <h1>upload page</h1>
    <% if(error && error) { %>
        <div style="color: red;"><%= error[0] %></div>
        <% } %>
    <form action="/upload" method="post" enctype="multipart/form-data">
        <div class="group">
            <input type="file" name="file" id="">
        </div>
        <button>upload file </button>
    </form>
    <h2>Uploaded Files</h2>

<div class="first-div">
  <% images.forEach(img => { %>
    <div >
      <img src="<%= img %>" alt="uploaded image" />
      <form action="/upload/delete-image" method="post">
  <input type="hidden" name="filename" value="<%= img.split('/images/')[1] %>">
  <button type="submit">Delete</button>
</form>

    </div>
  <% }) %>
</div>

</body>
</html>